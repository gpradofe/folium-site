---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Folium - The fastest PDF engine. Built in Rust." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/folium-site/favicon.svg" />
    <meta property="og:title" content="Folium - PDF Engine" />
    <meta property="og:description" content="Generate PDFs from JSON templates in under 100ms." />
    <title>{title}</title>
  </head>
  <body class="bg-slate-950 text-white antialiased">
    <slot />
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');
  html { font-family: 'Inter', system-ui, sans-serif; scroll-behavior: smooth; }
</style>
