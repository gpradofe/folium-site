---
/**
 * API Reference — powered by Redoc
 * Renders the OpenAPI spec at /openapi.json using Redoc standalone.
 */
const base = import.meta.env.BASE_URL ?? '/folium-site';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Folium API Reference</title>
  <meta name="description" content="Complete API reference for the Folium PDF Generation API. Explore endpoints, request/response schemas, authentication, rate limits, and error codes." />
  <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
  <style>
    body { margin: 0; padding: 0; }
    .custom-header {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }
    .custom-header a { color: #94a3b8; text-decoration: none; font-size: 0.875rem; transition: color 0.2s; }
    .custom-header a:hover { color: #e2e8f0; }
    .custom-header .brand { color: #f8fafc; font-weight: 700; font-size: 1.25rem; letter-spacing: -0.02em; }
    .custom-header .brand span { color: #22d3ee; }
    .custom-header nav { display: flex; gap: 1.5rem; align-items: center; }
  </style>
</head>
<body>
  <div class="custom-header">
    <a href={`${base}/`} class="brand"><span>◈</span> Folium</a>
    <nav>
      <a href={`${base}/`}>Home</a>
      <a href={`${base}/docs/quickstart`}>Quickstart</a>
      <a href={`${base}/docs`} style="color: #22d3ee;">API Reference</a>
    </nav>
  </div>
  <redoc spec-url={`${base}/openapi.json`}
    hide-hostname
    theme='{
      "colors": { "primary": { "main": "#0ea5e9" } },
      "typography": { "fontFamily": "-apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif", "headings": { "fontFamily": "-apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif" } },
      "sidebar": { "backgroundColor": "#0f172a", "textColor": "#94a3b8", "activeTextColor": "#f8fafc" },
      "rightPanel": { "backgroundColor": "#1e293b" }
    }'
  ></redoc>
  <script src="https://cdn.redoc.ly/redoc/latest/bundles/redoc.standalone.js"></script>
</body>
</html>
