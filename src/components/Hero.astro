---
const jsonSnippet = `{
  "template": "invoice",
  "data": {
    "company": "Acme Corp",
    "items": [
      {"name": "Widget Pro", "qty": 5, "price": 29.99},
      {"name": "Gadget X",   "qty": 2, "price": 49.99}
    ],
    "due_date": "2026-03-01"
  }
}`;
---

<section class="relative pt-32 pb-32 px-6 overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[600px] bg-emerald-500/8 rounded-full blur-[120px]"></div>
    <div class="absolute top-40 right-0 w-[400px] h-[400px] bg-teal-500/5 rounded-full blur-[100px]"></div>
    <div class="absolute top-60 left-0 w-[300px] h-[300px] bg-emerald-600/5 rounded-full blur-[80px]"></div>
    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(148,163,184,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(148,163,184,0.03)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  </div>
  
  <div class="relative max-w-6xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left: Copy -->
      <div>
        <div class="inline-flex items-center gap-2 bg-emerald-500/10 border border-emerald-500/20 rounded-full px-4 py-1.5 text-sm text-emerald-400 mb-8">
          <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
          Now in public beta
        </div>
        
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black tracking-tight leading-[1.05] mb-6">
          Enterprise PDF Generation at<br/>
          <span class="gradient-text">10x Lower Cost</span>
        </h1>
        
        <p class="text-lg md:text-xl text-slate-400 max-w-xl mb-10 leading-relaxed">
          Blazing-fast Rust performance with JSON-driven templates. Generate pixel-perfect PDFs in under 100ms — no headless browsers, no $900K licenses.
        </p>
        
        <div class="flex flex-col sm:flex-row items-start gap-4">
          <a href="#beta" class="group bg-emerald-500 hover:bg-emerald-400 text-slate-950 font-bold px-8 py-4 rounded-xl text-lg transition shadow-lg shadow-emerald-500/25 flex items-center gap-2">
            Get Started Free
            <svg class="w-5 h-5 group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
          </a>
          <a href="https://github.com/gpradofe/folium" class="border border-slate-700 hover:border-slate-500 text-slate-300 px-8 py-4 rounded-xl text-lg transition flex items-center gap-2">
            <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/></svg>
            View on GitHub
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 mt-16 pt-8 border-t border-slate-800/50">
          <div>
            <div class="text-3xl font-bold text-white">&lt;100ms</div>
            <div class="text-sm text-slate-500 mt-1">Generation time</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-white">11+</div>
            <div class="text-sm text-slate-500 mt-1">Template types</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-white">100%</div>
            <div class="text-sm text-slate-500 mt-1">Rust. Zero GC.</div>
          </div>
        </div>
      </div>

      <!-- Right: Code snippet -->
      <div class="relative">
        <div class="absolute -inset-4 bg-emerald-500/5 rounded-3xl blur-2xl pointer-events-none"></div>
        <div class="relative bg-slate-900/80 border border-slate-800 rounded-2xl overflow-hidden glow-emerald backdrop-blur-sm">
          <!-- Terminal header -->
          <div class="flex items-center gap-2 px-5 py-3 border-b border-slate-800 bg-slate-900/50">
            <div class="w-3 h-3 rounded-full bg-red-500/60"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/60"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/60"></div>
            <span class="ml-3 text-xs text-slate-500 font-mono">request.json</span>
          </div>
          
          <!-- JSON input -->
          <div class="p-5 border-b border-slate-800/50">
            <div class="text-xs text-slate-500 uppercase tracking-wider mb-3 font-semibold">Input — JSON</div>
            <pre class="text-sm overflow-x-auto"><code class="text-emerald-300/90">{jsonSnippet}</code></pre>
          </div>

          <!-- Output -->
          <div class="p-5 bg-slate-950/50">
            <div class="text-xs text-slate-500 uppercase tracking-wider mb-3 font-semibold">Output — 23ms</div>
            <div class="flex items-center gap-4">
              <div class="w-16 h-20 bg-white/5 border border-slate-700 rounded-lg flex items-center justify-center">
                <svg width="24" height="28" viewBox="0 0 24 28" fill="none">
                  <rect x="1" y="1" width="22" height="26" rx="2" stroke="#94a3b8" stroke-width="1.5"/>
                  <path d="M6 8h12M6 12h12M6 16h8" stroke="#34d399" stroke-width="1.5" opacity="0.6"/>
                </svg>
              </div>
              <div>
                <div class="text-sm font-medium text-white">invoice_acme_2026.pdf</div>
                <div class="text-xs text-slate-500 mt-1">42 KB · 2 pages · Generated in 23ms</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
