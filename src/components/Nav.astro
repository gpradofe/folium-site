  <!-- Mobile nav -->
  <div id="mobile-menu" class="hidden md:hidden bg-slate-950/95 backdrop-blur-xl border-t border-slate-800/50">
    <div class="px-6 py-4 space-y-3">
      <a href="#features" class="block text-slate-400 hover:text-white transition py-2">Features</a>
      <a href="/folium-site/templates" class="block text-slate-400 hover:text-white transition py-2">Templates</a>
      <a href="/folium-site/benchmarks" class="block text-slate-400 hover:text-white transition py-2">Benchmarks</a>
