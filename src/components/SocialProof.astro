---
const reasons = [
  {
    title: "300x Faster",
    desc: "Generate thousands of PDFs per second with Rust's zero-cost abstractions.",
    icon: `<svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`,
    stat: "300x",
  },
  {
    title: "JSON-Driven",
    desc: "No HTML/CSS wrestling. Define templates in JSON, get pixel-perfect PDFs.",
    icon: `<svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`,
    stat: "0",
  },
  {
    title: "Open Source",
    desc: "MIT licensed. Self-host or use our API. No $900K vendor lock-in.",
    icon: `<svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"/></svg>`,
    stat: "MIT",
  },
];
---

<section id="social-proof" class="py-28 px-6 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-emerald-500/[0.02] to-transparent pointer-events-none"></div>

  <div class="relative max-w-6xl mx-auto">
    <div class="text-center mb-20 animate-on-scroll">
      <div class="inline-flex items-center gap-2 bg-slate-800/50 border border-slate-700/50 rounded-full px-4 py-1.5 text-sm text-slate-400 mb-6">
        Trusted by developers
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-5">Why Developers Choose<br/><span class="gradient-text">Folium</span></h2>
    </div>

    <div class="grid md:grid-cols-3 gap-5 stagger-children">
      {reasons.map((r) => (
        <div class="animate-on-scroll group bg-slate-900/40 border border-slate-800/80 rounded-2xl p-7 hover:border-emerald-500/30 hover:bg-slate-900/60 transition-all duration-300 text-center">
          <div class="w-12 h-12 bg-emerald-500/10 rounded-xl flex items-center justify-center mb-5 text-emerald-400 group-hover:bg-emerald-500/15 transition-colors mx-auto" set:html={r.icon} />
          <div class="text-3xl font-bold gradient-text mb-2">{r.stat === "0" ? "Zero CSS" : r.stat}</div>
          <h3 class="text-lg font-semibold mb-3">{r.title}</h3>
          <p class="text-slate-400 leading-relaxed text-sm">{r.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
