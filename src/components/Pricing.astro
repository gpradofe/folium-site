---
const tiers = [
  {
    name: "Free",
    price: "$0",
    period: "forever",
    desc: "For side projects and testing.",
    features: ["100 PDFs/month", "1 template", "Community support", "REST API access", "No credit card required"],
    cta: "Start Free",
    ctaLink: "#beta",
    highlight: false
  },
  {
    name: "Pro",
    price: "$49",
    period: "/month",
    desc: "For growing teams and products.",
    features: ["10,000 PDFs/month", "Unlimited templates", "Priority support", "Custom fonts", "Webhooks & async", "$0.005/PDF overage"],
    cta: "Start Free",
    ctaLink: "#beta",
    highlight: true
  },
  {
    name: "Enterprise",
    price: "Custom",
    period: "",
    desc: "Unlimited scale. Tailored to your organization.",
    features: ["Unlimited PDFs", "SLA guarantee", "Dedicated support", "SSO & SAML", "Audit logs", "On-premise option"],
    cta: "Contact Sales",
    ctaLink: "mailto:hello@folium.dev",
    highlight: false
  }
];
---

<section id="pricing" class="py-28 px-6 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-slate-900/30 to-transparent pointer-events-none"></div>
  
  <div class="relative max-w-6xl mx-auto">
    <div class="text-center mb-20 animate-on-scroll">
      <div class="inline-flex items-center gap-2 bg-slate-800/50 border border-slate-700/50 rounded-full px-4 py-1.5 text-sm text-slate-400 mb-6">
        Simple pricing
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-5">No contracts.<br/><span class="gradient-text">No surprises.</span></h2>
      <p class="text-slate-400 text-lg">Pay for what you use. Cancel anytime. Start free.</p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto stagger-children">
      {tiers.map((t) => (
        <div class={`animate-on-scroll rounded-2xl p-8 transition-all duration-300 ${
          t.highlight 
            ? 'bg-emerald-500/5 border-2 border-emerald-500/40 relative glow-emerald scale-[1.02]' 
            : 'bg-slate-900/40 border border-slate-800 hover:border-slate-700'
        }`}>
          {t.highlight && (
            <div class="absolute -top-3.5 left-1/2 -translate-x-1/2 bg-emerald-500 text-slate-950 text-xs font-bold px-4 py-1 rounded-full uppercase tracking-wider">
              Most Popular
            </div>
          )}
          <h3 class="text-lg font-semibold mb-2">{t.name}</h3>
          <div class="flex items-baseline gap-1 mb-2">
            <span class="text-5xl font-bold">{t.price}</span>
            <span class="text-slate-500">{t.period}</span>
          </div>
          <p class="text-slate-500 text-sm mb-8">{t.desc}</p>
          <ul class="space-y-3 mb-8">
            {t.features.map((f) => (
              <li class="flex items-start gap-3 text-sm text-slate-300">
                <svg class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                {f}
              </li>
            ))}
          </ul>
          <a href={t.ctaLink} class={`block text-center py-3.5 rounded-xl font-semibold transition ${
            t.highlight
              ? 'bg-emerald-500 hover:bg-emerald-400 text-slate-950 shadow-lg shadow-emerald-500/20'
              : 'border border-slate-700 hover:border-slate-500 text-slate-300'
          }`}>
            {t.cta}
          </a>
        </div>
      ))}
    </div>

    <!-- SmartDX comparison callout -->
    <div class="mt-16 text-center animate-on-scroll">
      <div class="inline-flex items-center gap-3 bg-slate-900/50 border border-slate-800 rounded-xl px-6 py-4 text-sm">
        <span class="text-slate-500">Switching from SmartDX?</span>
        <span class="text-white font-semibold">Save $899,700/year on Enterprise.</span>
        <span class="text-emerald-400">That's not a typo.</span>
      </div>
    </div>
  </div>
</section>
